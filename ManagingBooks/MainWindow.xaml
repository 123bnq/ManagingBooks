<Window x:Class="ManagingBooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagingBooks"
        mc:Ignorable="d"
        Title="Book Management" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Background="WhiteSmoke" ResizeMode="CanMinimize">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.Exit" CanExecute="ExitCommand_CanExecute" Executed="ExitCommand_Executed"/>
        <CommandBinding Command="local:CustomCommands.Search" CanExecute="SearchCommand_CanExecute" Executed="SearchCommand_Executed"/>
        <CommandBinding Command="local:CustomCommands.Edit" CanExecute="EditCommand_CanExecute" Executed="EditCommand_Executed"/>
        <CommandBinding Command="local:CustomCommands.Print" CanExecute="EditCommand_CanExecute" Executed="PrintCommand_Executed"/>
        <CommandBinding Command="local:CustomCommands.Delete" CanExecute="DeleteCommand_CanExecute" Executed="DeleteCommand_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Add..." Click="AddWindow_Click"/>
                <MenuItem Header="_Edit..." Command="local:CustomCommands.Edit"/>
                <MenuItem Header="_Delete..." Command="local:CustomCommands.Delete"/>
                <MenuItem Header="_Exit" Command="local:CustomCommands.Exit"/>
            </MenuItem>
            <MenuItem Header="_Data">
                <MenuItem Header="Edit _Publisher" Click="EditPublisher_Click"/>
                <MenuItem Header="Edit P_lace" Click="EditPlace_Click"/>
                <MenuItem Header="Edit _Medium" Click="EditMedium_Click"/>
            </MenuItem>
            <MenuItem Header="_Language">
                <MenuItem Header="_English"/>
                <MenuItem Header="_Deutsch"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Help"/>
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Margin="10,0,5,0" Text="{Binding Status}"/>
            <ProgressBar Minimum="0" Maximum="100" Height="15" Width="200" Value="{Binding Progress}"/>
        </StatusBar>
        <StackPanel Height="400">
            <ListView x:Name="SearchList" Width="1000" Height="200" Margin="10">
                <ListView.Resources>
                    <ContextMenu x:Key="ItemContextMenu">
                        <MenuItem Header="Edit..." Command="local:CustomCommands.Edit"/>
                        <MenuItem Header="Delete..." Command="local:CustomCommands.Delete"/>
                        <MenuItem Header="Print..." Command="local:CustomCommands.Print"/>
                    </ContextMenu>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="BookId" Width="Auto" DisplayMemberBinding="{Binding BookId}"/>
                        <GridViewColumn Header="Number" Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number, StringFormat={}{0:#000000}}" TextAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Signature" Width="Auto" DisplayMemberBinding="{Binding Signatures}"/>
                        <GridViewColumn Header="Title" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Title}" FontStyle="Italic" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Authors" Width="150" DisplayMemberBinding="{Binding Authors}"/>
                        <GridViewColumn Header="Publishers" Width="75" DisplayMemberBinding="{Binding Publishers}"/>
                        <GridViewColumn Header="Year" Width="50" DisplayMemberBinding="{Binding Year}"/>
                        <GridViewColumn Header="Version" Width="50" DisplayMemberBinding="{Binding Version}"/>
                        <GridViewColumn Header="Medium" Width="100" DisplayMemberBinding="{Binding Medium}"/>
                        <GridViewColumn Header="Place" Width="75" DisplayMemberBinding="{Binding Place}"/>
                        <GridViewColumn Header="Date" Width="75" DisplayMemberBinding="{Binding Date}"/>
                        <GridViewColumn Header="Pages" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Pages}" TextAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Price" Width="40">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:#0.00}}" TextAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Margin="20,0,40,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Search:" Margin="0,0,0,5"/>
                <TextBox Name="BoxSearchText" Grid.Column="1" Width="600" Margin="5,0,5,5" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" TextChanged="BoxSearchText_TextChanged">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="local:CustomCommands.Search"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Grid.Column="2" MinWidth="75" Content="Search" Margin="5,0,0,5" Command="local:CustomCommands.Search"/>
                <TextBlock Grid.Row="1" Text="Search by:" Margin="0,0,10,0"/>
                <ComboBox Name="BoxSearchBy" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0" Text="{Binding SearchBy}" IsSynchronizedWithCurrentItem="True">
                    <ComboBoxItem Content="Number"/>
                    <ComboBoxItem Content="Signature"/>
                    <ComboBoxItem Content="Title"/>
                    <ComboBoxItem Content="Authors"/>
                    <ComboBoxItem Content="Place"/>
                </ComboBox>
            </Grid>
            <WrapPanel Margin="20,0,40,0" HorizontalAlignment="Right">
                <Button Name="BtnPrint" Content="Print..." MinWidth="75" Command="local:CustomCommands.Print"/>
            </WrapPanel>
        </StackPanel>
    </DockPanel>
</Window>
